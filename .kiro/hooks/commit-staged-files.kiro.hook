{
  "enabled": true,
  "name": "Commit Staged Files",
  "description": "Commit staged changes with Conventional Commits format",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Review the staged changes and commit them with an appropriate commit message following [Conventional Commits 1.0.0](https://www.conventionalcommits.org/en/v1.0.0/). If the staging area is empty, let me know."
  },
  "shortName": "commit-staged-files"
}
